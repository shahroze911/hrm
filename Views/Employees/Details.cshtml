@model Cities_States.Models.Employee

@{
    ViewBag.Title = "Details";
}

<style>
    .print-border {
        border: 1px solid #000;
        padding: 10px;
        margin: 10px 0;
    }

    .print-table th,
    .print-table td {
        border: 1px solid #000;
        padding: 8px;
    }

    .card {
        margin: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        animation-duration: 0.5s;
    }

    .card-header {
        background-color: #f8f9fa;
        border-bottom: 1px solid #dee2e6;
    }

    .card-title {
        margin-bottom: 0;
    }

    .card-body {
        padding: 20px;
    }

    .card-footer {
        background-color: #f8f9fa;
        border-top: 1px solid #dee2e6;
        padding: 10px 20px;
    }

    /* Animation classes */
    .animated {
        animation-fill-mode: both;
    }


    .fadeInUp {
        animation-name: fadeInUp;
    }

    .card-body .position-relative {
        padding-top: 150px; /* Adjust as needed to create space for the photograph */
    }

    .card-body .text-right {
        position: absolute;
        top: 0;
        right: 0;
    }

    .btn-back {
        position: absolute;
        top: 10px;
        left: 10px;
        padding: 10px 20px;
        border-radius: 5px;
        text-decoration: none;
        color: #fff;
        background-color: #6c757d; /* Gray color for back button */
        border: none;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .btn-back:hover {
            background-color: #495057; /* Darker gray on hover */
        }

    .btn-back {
        background-color: #6c757d;
        margin-left: 10px;
    }

        .btn-back:hover {
            background-color: #495057;
        }
</style>
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

<div class="card animated fadeInUp">
    <div class="card-header" style="position: relative;">
    <a href="@Url.Action("Index")" class="btn btn-back" style="position: absolute; left: 10px; top: 50%; transform: translateY(-50%);">
        <i class="material-icons">arrow_back</i>
    </a>        
    <h2 class="card-title" style="color: #007bff; font-weight: bold; margin-bottom: 20px; text-align: center;">Employee Details</h2>
</div>

    <div class="card-body position-relative">
        
        <div class="text-right mb-3">
            <img src="@Model.Photograph" alt="Employee Photograph" class="employee-photo" style="max-width: 300px; max-height: 300px;" />
        </div>
        <table class="table">
            <tr>
                <th>Full Name</th>
                <td>@Html.DisplayFor(model => model.FullName)</td>
            </tr>

            <tr>
                <th>
                    Father Name
                </th>

                <td>
                    @Html.DisplayFor(model => model.FathersName)
                </td>
            </tr>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Designation)
                </th>

                <td>
                    @Html.DisplayFor(model => model.Designation)
                </td>

            </tr>

            <tr>
                <th>
                    Date of Birth
                </th>

                <td>
                    @Html.DisplayFor(model => model.DateOfBirth)
                </td>
            </tr>

            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Gender)
                </th>

                <td>
                    @Html.DisplayFor(model => model.Gender)
                </td>
            </tr>

            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.PAN)
                </th>

                <td>
                    @Html.DisplayFor(model => model.PAN)
                </td>
            </tr>

            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Aadhar)
                </th>

                <td>
                    @Html.DisplayFor(model => model.Aadhar)
                </td>
            </tr>
            <tr>
                <th>
                    Mobile Number
                </th>
                <td>
                    @Html.DisplayFor(model => model.MobileNumber)
                </td>
            </tr>


            <tr>


                <th>
                    Emergency Contact Number
                </th>
                <td>
                    @Html.DisplayFor(model => model.EmergencyContactNumber)
                </td>
            </tr>
            <tr>


                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <td>
                    @Html.DisplayFor(model => model.Email)
                </td>

                <th>
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <td>
                    @Html.DisplayFor(model => model.Address)
                </td>
            </tr>
            <tr>
                <th>
                    Date of Joining
                </th>
                <td>
                    @Html.DisplayFor(model => model.DateOfJoining)
                </td>

                <th>
                    Date of Deployment
                </th>

                <td>
                    Date of Deployment
                </td>
            </tr>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.UAN)
                </th>

                <td>
                    @Html.DisplayFor(model => model.UAN)
                </td>
                <th>
                    PF Number
                </th>

                <td>
                    @Html.DisplayFor(model => model.PFNumber)
                </td>
            </tr>
            

            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.SalaryBelow21K)
                </th>

                <td>
                    @Html.DisplayFor(model => model.SalaryBelow21K)
                </td>

                <th>
                    ESI Number
                </th>

                <td>
                    @Html.DisplayFor(model => model.ESINumber)
                </td>
            </tr>



            <tr>
                <th>
                    Bank Account Number
                </th>

                <td>
                    @Html.DisplayFor(model => model.BankAccountNumber)
                </td>

                <th>
                    @Html.DisplayNameFor(model => model.IFSC)
                </th>

                <td>
                    @Html.DisplayFor(model => model.IFSC)
                </td>
            </tr>

            
            <tr>
                <th>
                    Client Name
                </th>

                <td>
                    @Html.DisplayFor(model => model.Client.ClientName)
                </td>

                <th>
                    Branch Code
                </th>

                <td>
                    @Html.DisplayFor(model => model.BranchCode)
                </td>
            </tr>            

            <tr>
                
            </tr>
        </table>
    </div>

    <div class="card-footer">
        <div class="row">
            <div class="col">
                @Html.ActionLink("Edit", "Edit", new { id = Model.EmployeeID }, new { @class = "btn btn-primary btn-block" })
            </div>
            <div class="col">
                <button onclick="printEmployeeDetails()" class="btn btn-secondary btn-block">Print Details</button>
            </div>
            <div class="col">
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary btn-block" })
            </div>
        </div>
    </div>
</div>

<script>
    function printEmployeeDetails() {
        // Get the HTML content of the card body
        var employeeDetails = document.querySelector('.card-body').innerHTML;

        // Open a new window
        var printWindow = window.open('', '_blank');

        // Write the HTML content to the new window
        printWindow.document.write('<html><head><title>Employee Details</title></head><body>');
        printWindow.document.write(employeeDetails);
        printWindow.document.write('</body></html>');

        // Close the document
        printWindow.document.close();

        // Print the window
        printWindow.print();
    }
</script>

