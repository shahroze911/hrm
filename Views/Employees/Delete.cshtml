@model Cities_States.Models.Employee

@{
    ViewBag.Title = "Delete";
}

<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

<style>
    /* Custom styles for the delete view */
    .container {
        max-width: 800px;
        margin: auto;
        padding: 20px;
    }

    .card {
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        padding: 20px;
        margin-bottom: 20px;
    }

        .card dt {
            font-weight: bold;
            margin-bottom: 5px;
        }

        .card dd {
            margin-bottom: 15px;
        }

    .btn {
        padding: 10px 20px;
        border-radius: 5px;
        text-decoration: none;
        color: #fff;
        background-color: #007bff;
        border: none;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .btn:hover {
            background-color: #0056b3;
        }

    .btn-back {
        background-color: #6c757d;
        margin-left: 10px;
    }

        .btn-back:hover {
            background-color: #495057;
        }
    .card .position-relative {
        padding-top: 200px; /* Adjust as needed to create space for the photograph */
    }

    .card .text-right {
        position: absolute;
        top: 0;
        right: 0;
    }
    .btn-back {
        position: absolute;
        top: 10px;
        left: 10px;
        padding: 10px 20px;
        border-radius: 5px;
        text-decoration: none;
        color: #fff;
        background-color: #6c757d; /* Gray color for back button */
        border: none;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .btn-back:hover {
            background-color: #495057; /* Darker gray on hover */
        }

    .delete-btn-container {
        display: flex;
        justify-content: center;
        margin-top: 20px; /* Adjust as needed */
    }

</style>

<div class="container">
    <div class="card">
        <a href="@Url.Action("Index")" class="btn btn-back"><i class="material-icons">arrow_back</i></a>

        <div class="text-right mb-3">
            <img src="@Model.Photograph" alt="Employee Photograph" class="employee-photo" style="max-width: 300px; max-height: 300px;" />
        </div>
        <h2 style="color: #007bff; font-weight: bold; margin-bottom: 20px; text-align:center;margin-top:20px">Delete</h2>
        <div>
            <dl class="row">
                <dt class="col-sm-4">Full Name</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.FullName)</dd>

                <dt class="col-sm-4">Father's Name</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.FathersName)</dd>

                <dt class="col-sm-4">Designation</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Designation)</dd>


                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.DateOfBirth)
                </dt>

                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.DateOfBirth)
                </dd>

                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Gender)
                </dt>

                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Gender)
                </dd>               

                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Aadhar)
                </dt>

                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Aadhar)
                </dd>

                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.MobileNumber)
                </dt>

                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.MobileNumber)
                </dd>

                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.EmergencyContactNumber)
                </dt>

                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.EmergencyContactNumber)
                </dd>
             

                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Address)
                </dt>

                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Address)
                </dd>

                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.DateOfJoining)
                </dt>

                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.DateOfJoining)
                </dd>






                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.IFSC)
                </dt>

                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.IFSC)
                </dd>

                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.BranchCode)
                </dt>

                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.BranchCode)
                </dd>

                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.DateOfDeployment)
                </dt>

                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.DateOfDeployment)
                </dd>



                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Client.ClientName)
                </dt>

                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Client.ClientName)
                </dd>

            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <div class="delete-btn-container">
                <button type="button" class="btn btn-danger" id="btnDelete">Delete</button>
            </div>
        </div>

            }
        </div>
    </div>
</div>

<script>
    document.getElementById('btnDelete').addEventListener('click', function () {
        if (confirm('Are you sure you want to delete this record?')) {
            document.forms[0].submit();
        }
    });
</script>
