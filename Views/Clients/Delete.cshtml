@model Cities_States.Models.Client

@{
    ViewBag.Title = "Delete";
}
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h3>Are you sure you want to delete this?</h3>
            <div>
                <h4>Client Details</h4>
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.ClientName)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.ClientName)
                    </dd>
                </dl>
            </div>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-group">
                    <input type="submit" value="Delete" class="btn btn-danger" /> <!-- Changed button color to red -->
                    <a href="@Url.Action("Index")" class="btn btn-secondary">Back to List</a> <!-- Added Bootstrap button class -->
                </div>
            }
        </div>
    </div>
</div>

<style>
    /* Add custom styles */
    .container {
        margin-top: 20px;
    }

    .dl-horizontal dt {
        width: 120px; /* Adjust width for term column */
    }
</style>
