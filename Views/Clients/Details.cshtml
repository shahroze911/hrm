@model Cities_States.Models.Client

@{
    ViewBag.Title = "Details";
}
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h4>Client Details</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.ClientName)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.ClientName)
                </dd>
            </dl>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="btn-group">
                <a href="@Url.Action("Edit", new { id = Model.ClientID })" class="btn btn-primary">Edit</a> <!-- Added Bootstrap button class -->
                <button id="deleteBtn" class="btn btn-danger">Delete</button> <!-- Added Bootstrap button class -->
            </div>
            <a href="@Url.Action("Index")" class="btn btn-secondary">Back to List</a> <!-- Added Bootstrap button class -->
        </div>
    </div>
</div>

@section scripts {
    <script>
        $(function () {
            // Confirmation for delete button
            $('#deleteBtn').click(function () {
                return confirm('Are you sure you want to delete this client?');
            });
        });
    </script>
}

<style>
    /* Add custom styles */
    .container {
        margin-top: 20px;
    }

    .dl-horizontal dt {
        width: 120px; /* Adjust width for term column */
    }

    .btn-group {
        margin-bottom: 10px;
    }
</style>
