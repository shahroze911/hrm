@model Cities_States.Models.BranchOffice

@{
    ViewBag.Title = "Delete";
}

<style>
    .form-actions {
        margin-top: 20px;
    }

    .btn-delete {
        background-color: #dc3545;
        color: white;
    }

    .card-header {
        background-color: #f8d7da;
        color: #721c24;
    }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h2 class="text-center">Delete Branch Office</h2>
                </div>
                <div class="card-body">
                    <h3 class="text-center text-danger">Are you sure you want to delete this?</h3>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.BranchCode)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.BranchCode)
                        </dd>

                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.State)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.State)
                        </dd>

                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.District)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.District)
                        </dd>

                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.BranchAddress)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.BranchAddress)
                        </dd>

                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.IsCLRALicenseApplicable)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.IsCLRALicenseApplicable)
                        </dd>

                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.CLRALicenseExpiry)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.CLRALicenseExpiry)
                        </dd>

                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Client.ClientName)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Client.ClientName)
                        </dd>
                    </dl>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-actions text-center">
                            <input type="submit" value="Delete" class="btn btn-delete" /> |
                            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
